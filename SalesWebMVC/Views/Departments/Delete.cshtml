@model SalesWebMVC.Models.Department

@{
    ViewData["Title"] = "Deletar";
}

<h1 c>Deseja deletar o departamento <strong>@Model.Name</strong></h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd class = "col-sm-10">
