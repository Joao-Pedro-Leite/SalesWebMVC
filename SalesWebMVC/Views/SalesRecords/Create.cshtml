@model SalesWebMVC.Models.ViewModels.SalesRecordsFormViewModel

@{
    ViewData["Title"] = "Registro de Venda";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="TemplateSale.Date" class="control-label">Data da Venda</label>
                <input asp-for="TemplateSale.Date" class="form-control" />
                <span class="text-danger">Datas de vendas a partir dos anos 2000</span>
            </div>
            <div class="form-group">
                <label asp-for="TemplateSale.Amount" class="control-label">Valor da venda</label>
                <input type="number" asp-for="TemplateSale.Amount" class="form-control" />
                <span class="text-danger">Venda deve ter um valor a cima de 50</span>

            </div>
            <div class="form-group">
                <label asp-for="TemplateSale.Status" class="control-label"></label>
                <select asp-for="TemplateSale.Status" 
                    asp-items="Html.GetEnumSelectList<SalesWebMVC.Models.Enums.SaleStatus>()"
                    class="form-control" place-holder>
                    <option value=null disabled selected hidden>Selecione o status...</option>
                </select>
            </div>
            <input type="hidden" value="@Model.SellerId" asp-for="SellerId" /> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="AllSales" asp-route-id="@Model.SellerId" class="btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

