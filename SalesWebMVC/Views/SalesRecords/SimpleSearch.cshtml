@model IEnumerable<SalesWebMVC.Models.SalesRecord>

@{
    ViewData["Title"] = "Busca Simples";
}

<h2>@ViewData["Title"]</h2>

    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div id="maxMin" class="form-group row jumbotron">
                <div class="form-group">
                    <label for="minDate" class="minhaNavBar">Data min</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate" class="minhaNavBar">Data max</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
                <button id="simpleSearch" type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>
    </div>

<div class="card mb-3 bordinha">
    <div class="panel-heading tituloTabela">
        <h3 class="panel-title">Total de Vendas = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body principalTabela">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success itemTabela">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        Data da Venda
                    </th>
                    <th>
                        Vendedor
                    </th>
                    <th>
                        Departamento
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>